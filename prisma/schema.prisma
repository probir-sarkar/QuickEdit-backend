// npx prisma db push - create the database schema
// npx prisma generate - generate the Prisma Client

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  gender    Gender
  email     String
  phone     String
  other     Json?
  address   Address?

  @@unique([email, phone])
  @@map("contacts")
}

model Address {
  id        String  @id @default(cuid())
  line1     String
  line2     String?
  city      String
  state     String
  country   String
  zipCode   String
  Contact   Contact @relation(fields: [contactId], references: [id])
  contactId String  @unique

  @@map("addresses")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}
